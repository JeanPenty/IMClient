<?xml version="1.0"?>
<include>
	<caption pos="0,0,-0,-0">
		<edit name="edit_msg_search"
			  pos="10,20,-10,@28"
			  colorBkgnd="rgb(220,224,228)"
			  align="left"
			  valign="center"
			  inset="30,0,25,0"
			  notifyChange="1"
			  font="face:微软雅黑,size:12"
			  autoWordSel="0"
			  colorText="#000000"
			  cueColor="rgb(100,100,100)"
			  cueText="搜索" />
		<img pos="12,24" skin="skin_search"></img>

		<tabctrl pos="0,60,-0,-0" name="tab_contact_search" tabHeight="0">
			<page title="page_contact_contact">
				<imgbtn name="btn_contact_mgr" pos="10,10,-10,@32" skin="skin_send" font="face:微软雅黑,size:12" text="通讯录管理" align="center" valign="center" cursor="hand"/>
				
				<treeview pos="0,[10,-0,-0" name="tv_contact" indent="0" sbSkin="skin_scrollbar" sbwid="8">
					<template >
						<item_group focusable="0" layout="vbox" colorSelected="#00000000" size="240,30" margin="0,0,0,1" colorBorder="@color/color_line">
							<hr name="hr" height="1" width="-2" colorLine="#c9c7c6"/>
							<text extend_left="12" weight="1" size="-2,0" align="bottom" name="name" text="新朋友" font="face:微软雅黑,size:12" colorText="#E5A8A8"/>
						</item_group>
						<item_data size="240,50" layout="hbox" gravity="center" colorHover="#dddbda" colorSelected="#c9c7c6">
							<img extend_left="12" name="face" skin="skin_default_personal32"/>
							<text extend_left="12" name="name" text="新朋友" font="face:微软雅黑,size:14" dotted="1"/>
						</item_data>
					</template>
				</treeview>
			</page>
			<page title="page_contact_search">
			</page>
		</tabctrl>
	</caption>
</include>
